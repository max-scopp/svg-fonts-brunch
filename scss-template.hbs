@font-face {
	font-family: "{{fontName}}";
	src: {{{src}}};
}

@if not variable-exists('webfont-icons') {
	$webfont-icons: () !global;
}

$webfont-icons: map-merge($webfont-icons, (
	{{#each codepoints}}
		'{{@key}}': ('{{../fontName}}' '{{this}}'),
	{{/each}}
));

@mixin webfont-icon($name) {
	line-height: 1;

	$icon: map-get($webfont-icons, $name);
  @if length($icon) >= 2 {
    $selector: '::before';
		@if $after {
			$selector: '::after'
		}
		
		&#{$selector} {
			font-family: nth($icon, 1) !important;
			font-style: normal;
			font-weight: normal !important;
			vertical-align: top;
			content: unquote("\"\\#{nth($icon, 2)}\"");
		}
  }
}
